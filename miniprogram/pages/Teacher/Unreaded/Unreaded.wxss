/* unread-list.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.list {
  width: 100%;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.name {
  font-size: 28rpx;
  color: #333;
}
