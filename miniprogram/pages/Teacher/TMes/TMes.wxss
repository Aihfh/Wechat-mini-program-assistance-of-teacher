.container {
  padding: 20rpx;
}

.input-box {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  height: 80rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #ccc;
}

.textarea {
  height: 200rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #ccc;
}
.textarea11 {
  height:  30rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #ccc;
}

.btn-upload {
  background-color: #3366cc;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
  margin-top: 10rpx;
}

.preview-image {
  width: 200rpx;
  height: 200rpx;
  margin-top: 10rpx;
}

.btn-submit {
  background-color: #3366cc;
  color: #fff;
  font-size: 30rpx;
  padding: 20rpx;
  border-radius: 5rpx;
  text-align: center;
}
